{% extends 'base.html.twig' %}

{% block body %}
    <h1>Animal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ animal.gender }}</td>
            </tr>
            <tr>
                <th>Species</th>
                <td>{{ animal.species }}</td>
            </tr>
            <tr>
                <th>Breed</th>
                <td>{{ animal.breed }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ animal.age }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ animal.size }}</td>
            </tr>
            <tr>
                <th>Spayed</th>
                <td>{% if animal.spayed %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Livewcats</th>
                <td>{% if animal.liveWcats %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Hometest</th>
                <td>{% if animal.homeTest %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Childfriend</th>
                <td>{% if animal.childFriend %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ animal.status }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('animal_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('animal_edit', { 'id': animal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
