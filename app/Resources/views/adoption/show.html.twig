{% extends 'base.html.twig' %}

{% block body %}
    <h1>Adoption</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adoption.id }}</td>
            </tr>
            <tr>
                <th>Adoptiondate</th>
                <td>{% if adoption.adoptionDate %}{{ adoption.adoptionDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adoption_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('adoption_edit', { 'id': adoption.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
