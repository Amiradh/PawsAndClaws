{% extends 'base.html.twig' %}

{% block content %}

    <link href="{{ asset('css/blogsingle.css') }}" rel="stylesheet">
    <div class="wrapper" style="margin-top: 0%;">

        <div class="card radius shadowDepth1" style="width: 170%;margin-right: 70%;">
            <div class="card__image border-tlr-radius" style="text-align: center;">
                <img style="width: 50%;height: 20%; margin-left: 25%;" src="{{ asset('bundles/uploads/brochures/'~(article.brochure) ) }}">            </div>

            <div class="card__content card__padding">

                <div class="card__meta">
                    <a href="#">{{ article.category }}</a>
                    <time>{{article.creationDate| date('F') }} {{ article.creationDate| date('d') }},{{ article.creationDate | date('Y') }}</time>
                </div>

                <article class="card__article">
                    <h2><a href="#">{{ article.title }}</a></h2>

                    <p>{{ article.content }}</p>
                </article>
            </div>

            <div class="card__action">

                <div class="card__author">
                    <img src="http://lorempixel.com/40/40/sports/" alt="user">
                    <div class="card__author-content">
                        By <a href="#">{{ article.author }}</a>
                        <br>

                    </div>
{% if app.user==article.author %}
                    {{ form_start(delete_form) }}
                    <a  style="float: right;" href="{{ path('article_edit', { 'id': article.id }) }}"><input type="button" class="btn btn-default" value="Edit article"></a>

                    <input style="float: right;" type="submit" class="btn btn-default" value="Delete article">
                    {{ form_end(delete_form) }}
                    {% endif %}
                </div>
                

            </div>
            <a style="float: right;margin-top: 2%" href="{{ path('article_index') }}">Check other articles</a>

        </div>

    </div>



