{% extends 'dashbase.html.twig' %}
{% block content %}

    <link href="{{ asset('css/table.css') }}" rel="stylesheet">


    <link href="{{ asset('css/admintable.css') }}" rel="stylesheet">

    <div style="padding-top: 5%; padding-bottom: 5%; text-align: center;  ">


        <h1>Accounts</h1>

        <table>
            <thead>
            <tr>

                <th>id</th>
                <th>Username</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th> phone number</th>
                <th> address</th>
                <th>roles</th>

                <th> last login</th>
                <th>activation</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td style="text-align:center;">{{ user.id|e }}</td>
                    <td style="text-align:center;">{{ user.username|e }}</td>
                    <td style="text-align:center;">{{ user.email|e }} </td>


                    {#  <th style="text-align:center;">firstname</th>
                      <th style="text-align:center;" >lastname</th>
                      <th style="text-align:center;" > phone number</th>
                      <th style="text-align:center;" > address</th>#}
                    <td style="text-align: center;"> {{ user.firstname }}</td>

                    <td style="text-align: center;"> {{ user.lastname }}</td>

                    <td style="text-align: center;"> {{ user.phonenumber }}</td>

                    <td style="text-align: center;"> {{ user.address }}</td>

                    <td style="text-align:center;">
                        {% for role in user.roles %}

                            {{ role }} <br>

                        {% endfor %}

                    </td>

                    <td style="text-align:center;"> {{ user.lastLogin|date('Y-m-d') }}</td>

                    <td style="text-align:center;">
                        {% if user.enabled == 1 %}
                            <svg class="glyph stroked checkmark" style="color: green; height: 30px; width: 30px;">
                                <use xlink:href="#stroked-checkmark"/>
                            </svg>

                        {% else %}
                            <svg class="glyph stroked cancel" style="color: red; height: 30px; width: 30px;">
                                <use xlink:href="#stroked-cancel"/>
                            </svg>
                        {% endif %}


                    </td>
             {#       <td>

                        <a href="#">
                            <svg class="glyph stroked lock" style="color: red; height: 30px; width: 30px;">
                                <use xlink:href="#stroked-lock"/>
                            </svg>
                        </a>
                    </td>#}
                </tr>

            {% endfor %}

            </tbody>
        </table>


    </div>
{% endblock %}

